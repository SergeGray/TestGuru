<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <p>
      <strong><%= t('.name') %>:</strong>
      <%= @badge.name %>
    </p>

    <p>
      <strong><%= t('.icon') %>:</strong>
      <%= image_tag @badge.image_url %>
    </p>

    <p>
      <strong><%= t('.description') %>:</strong>
      <%= @badge.description %>
    </p>
    <div class="mt-1">
      <%= link_to t('.back'), badges_path %>
    </div>
  </div>
</div>
