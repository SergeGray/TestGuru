<tr>
  <td class="align-middle"><%= badge.name %></td>
  <td class="align-middle"><%= image_tag badge.image_url %></td>
  <td class="align-middle"><%= link_to t('.show'),
                               admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('.edit'),
                               edit_admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('.destroy'),
                               admin_badge_path(badge),
                               method: :delete,
                               data: { confirm: t('.confirm') } %></td>
</tr>
