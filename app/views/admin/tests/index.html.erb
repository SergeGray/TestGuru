<div class="row">
  <div class="col">
    <h1><%= t('.header') %></h1>

    <table class="table">
      <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon "arrow-up", class: "text-success hide" %>
        <%= octicon "arrow-down", class: "text-success hide" %>
      </th>
      <th><%= t('.category') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.author') %></th>
      <th><%= t('.questions') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>

    <%= render @tests %>
  </div>
</div>

<div class="mt-1">
  <%= link_to t('.new'), new_admin_test_path %>
  <%= link_to t('.gists'), admin_gists_path %>
</div>
