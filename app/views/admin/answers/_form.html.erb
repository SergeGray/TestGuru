<%= form_with model: [@question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :answer_body %>
  </div>

  <div class="field">
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
