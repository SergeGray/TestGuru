<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Category:</strong>
  <%= @test.category.title %>
</p>
<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>
<p>
  <strong>Author:</strong>
  <%= @test.author.name %>
</p>

<h2>Questions</h2>
  <table>
    <tbody>
      <% @test.questions.each do |question| %>
        <tr>
          <td><%= question.body %></td>
          <td><%= link_to 'Show', question %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to 'Back', tests_path %>
